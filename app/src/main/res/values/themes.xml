<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CookBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/PlainButton</item>
        <item name="materialButtonStyle">@style/PlainMaterialButton</item>

        <item name="colorPrimary">#775123</item>
        <item name="colorPrimaryVariant">#775123</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorButtonNormal">@null</item>


    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/ic_dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">60%</item>
    </style>

</resources>


